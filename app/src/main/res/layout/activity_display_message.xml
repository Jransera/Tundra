<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="visible"
    tools:context=".DisplayMessageActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="489dp"
        android:layout_height="964dp"
        android:background="@color/light_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"><![CDATA[

        //turn off the alarm -> use of BOD for this??













        ]]>

        <TimePicker
            android:id="@+id/time_setter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:headerTimeTextAppearance="@style/TextAppearance.AppCompat.Large" />

        <ToggleButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_setter"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_gravity="center"
            android:layout_marginStart="140dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="140dp"
            android:checked="false"
            android:onClick="OnToggleClicked" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>